<div id="signup">
  <h2>Signup</h2>
  <form action="/signup" method="POST" enctype="multipart/form-data">

    <div>

      <label for="input-username"> Username: </label>
      <input type="text" name="username" placeholder="Your username" />

    </div>

    <div>

      <label for="input-email"> Email: </label>
      <input type="email" id="input-email" name="email" placeholder="Your email" />

    </div>

    <div>

      <label for="input-password"> Password: </label>
      <input type="password" name="password" id="input-password" placeholder="********" />

    </div>

    <div>

      <label for="input-image"> Profile Picture: </label>
      <input type="file" name="image" id="input-image" class="form-control-file">

    </div>

    <button type="submit" class="btn btn-primary">Create account!</button>

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
    {{!-- error message will be added here --}}
  </form>
</div>

<p class="account-message">
  Already have an account?
  <a href="/login">Login</a>
</p>