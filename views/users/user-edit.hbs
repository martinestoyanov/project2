<h2>Update Profile</h2>

<div>

  <form action="/userProfile/{{_id}}/edit" method="POST" enctype="multipart/form-data">

    <div>

      <label for="input-username"> Username: </label>
      <input type="text" name="username" value="{{username}}" />

    </div>

    <div>

      <label for="input-email"> Email: </label>
      <input type="email" id="input-email" name="email" value="{{email}}" />

    </div>

    <div>

      <label for="input-image"> Profile Picture: </label>
      <input type="file" name="image" id="input-image" class="form-control-file">
      <input type="text" name="existingImage" hidden id="" value="{{imageUrl}}">

    </div>

    <button type="submit" class="btn btn-success">Update Profile</button>

  </form>

</div>